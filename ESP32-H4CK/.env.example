# Copy this to .env and fill in your credentials
# .env will be ignored by git and never committed

# WiFi Station Mode (connecting to existing network)
WIFI_SSID=YourNetworkName
WIFI_PASSWORD=YourNetworkPassword

# WiFi Access Point Mode (when ESP32 creates its own network)
AP_SSID=ESP32-H4CK-AP
AP_PASSWORD=vulnerable

# Network Mode: true=connect to WiFi (Station), false=only host AP
STATION_MODE=false

# Optional: JWT Secret (should be strong in production, weak here for lab)
JWT_SECRET=weak_secret_key_123

# Telnet Server Credentials (Port 23)
TELNET_ADMIN_PASSWORD=admin
TELNET_GUEST_PASSWORD=guest
TELNET_ROOT_PASSWORD=toor
